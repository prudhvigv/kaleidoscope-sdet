{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "built",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "resolveJsonModule": true,
    "removeComments": false,
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
